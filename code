def main():
    grades = []  
    print("Enter grades one by one. Type 'done' to finish entering grades.")

   
    while True:
        user_input = input("Enter a grade (or 'done' to finish): ")
        if user_input.lower() == 'done':
            break
        try:
            grade = float(user_input) 
            if 0 <= grade <= 100:  
                grades.append(grade)
            else:
                print("Grade must be a number between 0 and 100.")
        except ValueError:
            print("Invalid input. Please enter a numeric value.")

    
    if grades:  #should get a number as a grade, like numbers with letter grades
        average = sum(grades) / len(grades)
        print(f"Average grade: {average:.2f}")
    else:
        print("No valid grades were entered.")

if __name__ == "__main__":
    main()

